@model WebAppProjeto0404.Models.Home

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Listagem de FABRICANTES";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table class="table">
            <tr>
                <th>
                    Fabricantes
                </th>
            </tr>
            <tr>
                @foreach (var item in Model.fabricante)
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>

                }
            </tr>
        </table>
        <table class="table">
            <tr>
                <th>
                    Categoricos
                </th>
            </tr>
            <tr>
                @foreach (var item in Model.categorico)
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>

                }
            </tr>
        </table>
    </div>
</body>
</html>
