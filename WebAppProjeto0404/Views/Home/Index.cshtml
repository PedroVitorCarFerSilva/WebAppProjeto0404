@model WebAppProjeto0404.Models.Home

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Home";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table class="table">
            <tr>
                <th>Fabricantes</th>
            </tr>
            <tr>
                @foreach (var item in Model.fabricante)
                {
                    <td>
                        @Html.ActionLink(item.Nome, "Index", "Home", new { FabId = item.FabricanteId }, null)
                    </td>
                }
            </tr>
        </table>
    </div>

    <div>
        <table class="table">
            <tr>
                <th>Categoricos</th>
            </tr>
            <tr>
                @foreach (var item in Model.categorico)
                {
                    <td>
                        @Html.ActionLink(item.Nome, "Index", "Home", new { CatId = item.CategoricoId }, null)
                    </td>
                }
            </tr>
        </table>
    </div>

</body>
@if ((Model.produtos != null) && (Model.filtro == "Fabricante"))
{
    @Html.Partial("~/Views/Produtos/_PorFabricante.cshtml", Model.produtos.ToList())
}
@if ((Model.produtos != null) && (Model.filtro == "Categorico"))
{
    @Html.Partial("~/Views/Produtos/_PorCategorico.cshtml", Model.produtos.ToList())
}


</html>
@section styles{
    <link href="@Url.Content("~/content/DataTables-1.10.2/css/dataTables.bootstrap.css")" rel="stylesheet" />
}


